# FNewsCrawler Docker环境配置

# Web服务配置
WEB_HOST=0.0.0.0
WEB_PORT=8480

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Playwright配置
PW_USE_HEADLESS=true
PW_BROWSER_TIMEOUT=30000
PW_PAGE_TIMEOUT=30000
PW_CONTEXT_MAX_IDLE_TIME=3600
PW_CONTEXT_HEALTH_CHECK_TIME=300

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/fnewscrawler.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# MCP配置
MCP_SERVER_NAME=fnewscrawler
MCP_SERVER_VERSION=1.0.0

# 安全配置
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0



# 监控配置
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090